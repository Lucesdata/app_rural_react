generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  password  String
  role      String
  createdAt DateTime @default(now())
}

model Planta {
  id        Int      @id @default(autoincrement())
  nombre    String
  ubicacion String
  tipo      String
  createdAt DateTime @default(now())
}
